<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
    http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0" metadata-complete="false">

  <servlet>
    <servlet-name>EmployerController</servlet-name>
    <servlet-class>edu.dnu.fpm.pz.controllers.EmployerController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EmployerController</servlet-name>
    <url-pattern>/employers/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>VacancyController</servlet-name>
    <servlet-class>edu.dnu.fpm.pz.controllers.VacancyController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>VacancyController</servlet-name>
    <url-pattern>/vacancies/*</url-pattern>
  </servlet-mapping>

</web-app>
